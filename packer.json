{
	"variables": {
	  "docker_username": "",
	  "docker_password": ""
	},
	"builders": [
	  {
		"type": "docker",
		"image": "ubuntu:20.04",
		"commit": true,
		"changes": [
		  "EXPOSE 8080",
		  "CMD [\"apache-tomcat-9.0.62/bin/catalina.sh\",\"run\"]"
		]
	  }
	],
	"provisioners": [
	  {
		"type": "shell",
		"inline": [
		  "apt update && apt install ansible -y"
		]
	  },
	  {
		"type": "ansible-local",
		"playbook_file": "playbook.yml"
	  },
	  {
		"type": "file",
		"source": "build/libs/PetStore.war",
		"destination": "/usr/apache-tomcat-9.0.62/webapps/PetStore.war"
	  }
	],
	"post-processors": [
	  [
		{
		  "type": "docker-tag",
		  "repository": "victoremanuelsr/petstore",
		  "tags": "petstore"
		},
		{
		  "type": "docker-push",
		  "login": true,
		  "login_username": "{{user `docker_username`}}",
		  "login_password": "{{user `docker_password`}}"
		}
	  ]
	]
  }